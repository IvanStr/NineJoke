@model NineJoke.Web.ViewModels.PostDeleteViewModel

@{
}

<div align="center">
    <div class="col-md-7">
        <form asp-controller="Post" asp-action="Delete" enctype="multipart/form-data" method="post" class="form border-primary-4 rounded p-3 w-30 mx-auto mt-3">
            <h4>Are you sure you want to delete this post?</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group" style="width: 25%; float: right;">
                <label asp-for="Category"></label>
                <input asp-for="Category" class="form-control" value="@Model.Category" readonly/>
            </div>
            <div class="form-group" style="width: 75%; float: left;">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" style="resize: vertical;" rows="6" readonly></textarea>
            </div>
            @if (@Model.ImageUrl.EndsWith("webm"))
            {
                <div class="card-img-top zoom">
                    <video controls>
                        <source src="@Model.ImageUrl" type="video/webm">
                    </video>
                </div>
            }
            else
            {
                <div class="form-group">
                    <div class="card-img-top zoom">
                        <img src="@Model.ImageUrl" alt="@Model.Title">
                    </div>
                </div>
            }
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    </div>
</div>